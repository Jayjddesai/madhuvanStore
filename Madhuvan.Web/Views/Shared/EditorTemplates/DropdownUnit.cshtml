@using Kendo.Mvc.UI
@using Madhuvan.Commonlayer

@model object

@(Html.Kendo().ComboBox()
                      .DataTextField("PartyName")
                      .Name("PartyName")
                      .DataValueField("PartyId")
                      .DataSource(source => source.Read(read => read.Action("BindParty", ControllerName.BindDropDown)))
                      .Suggest(true)
                      .Filter(FilterType.Contains).HtmlAttributes(new { @style = "width:245px !important", @data_value_primitive = "true" })
                      .Placeholder(CommonHelper.PleaseSelect)
                      //.Events(x=>x.Select("onShipperSelect"))
              )