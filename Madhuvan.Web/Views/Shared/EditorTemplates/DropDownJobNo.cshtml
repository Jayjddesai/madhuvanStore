@using Kendo.Mvc.UI
@using Madhuvan.Commonlayer

@model object

@(Html.Kendo().ComboBox()
              .DataTextField("JobNo")
                  .Name("ConsignementsId")
              .DataValueField("ConsignementsId")
              .DataSource(source => source.Read(read => read.Action("BindJobNumber", ControllerName.PurchaseVoucher)))
              .Suggest(true)
              .Filter(FilterType.Contains).HtmlAttributes(new { @style = "width:245px !important", @data_value_primitive = "true" })
              .Placeholder(CommonHelper.PleaseSelect)
              .Events(x => x.Select("OnJobSelect"))
              .CascadeFrom("ConsignmentTypeName"))