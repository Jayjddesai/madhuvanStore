@using Kendo.Mvc.UI
@using Madhuvan.Commonlayer

@model object

@(Html.Kendo().ComboBox()
                        .DataTextField("CTINo")
                        .Name("CTId")
                        .DataValueField("CTId")
                        .DataSource(source => source.Read(read => read.Action("BindInvoiceNo", ControllerName.BindDropDown)))
                        .Suggest(true)
                        .Filter(FilterType.Contains).HtmlAttributes(new { @style = "width:245px !important", @data_value_primitive = "true" })
                        .Placeholder(CommonHelper.PleaseSelect)
                        .Events(x => x.Select("onInvoiceSelect")
                        ))