@using Kendo.Mvc.UI
@using Madhuvan.Commonlayer

@model object

@(Html.Kendo().ComboBox()
                      .DataTextField("ShipperName")
                      .Name("ShipperId")
                      .DataValueField("ShipperId")
                      .DataSource(source => source.Read(read => read.Action("BindShipper", ControllerName.BindDropDown)))
                      .Suggest(true)
                      .Filter(FilterType.Contains).HtmlAttributes(new { @style = "width:245px !important", @data_value_primitive = "true" })
                      .Placeholder(CommonHelper.PleaseSelect)
                      //.Events(x=>x.Select("onShipperSelect"))
              )