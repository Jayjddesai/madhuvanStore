@using Kendo.Mvc.UI
@using Madhuvan.Commonlayer

@model object

@(Html.Kendo().ComboBoxFor(m=>m)
                  .Name("VehicleSizeId")
                  .DataTextField("Size")
                  .DataValueField("VehicleSizeId")
                  .DataSource(source => source.Read(read => read.Action("BindVehicleSize", ControllerName.BindDropDown)))
                  .Suggest(true)
                  .Filter(FilterType.Contains).HtmlAttributes(new { @style = "width:245px !important", @data_value_primitive = "true" })
                  .Placeholder(CommonHelper.PleaseSelect)
              
)