@{
    Layout = null;
}

@using System.Collections
@using System.Globalization
@model Madhuvan.Datalayer.AdminUserMaster



<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Login - Shipping Management System</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/img/favicon.html">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    @Styles.Render("~/css/ui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>

<body class="login-page">
    <div class="login-wrapper">

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success" style="margin-left:20%;margin-right:20%">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Reset!</strong>&nbsp; @ViewBag.Message
            </div>
        }

        <!-- BEGIN Login Form -->
        @using (Html.BeginForm("ValidateUser", "Login", FormMethod.Post, new { @id = "form-login", @autocomplete = "off", @role = "form" }))
        {
            <h3>Login to your account</h3>
            <hr />
            <script src="~/Scripts/custom/Common.js"></script>
            <script src="~/Scripts/kendo/kendo.all.min.js"></script>

            <div class="form-group">
                <div class="controls">

                </div>
            </div>

           
            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @tabindex = "1" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password", @tabindex = "2" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>

            @*<div class="form-group">
                <div class="controls">
                    <label class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @type = "checkbox", @checked = "true", @tabindex = "4" })
                        Remember me
                    </label>
                </div>
            </div>*@
            <div class="form-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary form-control">Log In</button>
                </div>
            </div>
            <hr />
            <p class="clearfix">
                <a href="#" class="goto-forgot pull-left">Forgot Password?</a>
            </p>
        }
       
    </div>

    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>

    <script type="text/javascript">

        

        function goToForm(form) {
            $('.login-wrapper > form:visible').fadeOut(0, function () {
                $('#form-' + form).fadeIn(0);
            });
        }
        $(function () {
            $('.goto-login').click(function () {
                goToForm('login');
                document.title = 'Login';
            });
            $('.goto-forgot').click(function () {
                goToForm('forgot');
                document.title = 'Forgot Password';
            });
        });
        </script>
</body>
</html>
